# AegisAI Environment Configuration
# Copy this file to .env and customize values

# ===========================================
# Database Persistence
# ===========================================
# SQLite (default - zero config, good for development)
DATABASE_URL=sqlite:///data/aegis.db
DATABASE_RETENTION_DAYS=30
DATABASE_SNAPSHOT_RETENTION_DAYS=7
DATABASE_AUTO_CLEANUP=true

# PostgreSQL (production - uncomment to use)
# DATABASE_URL=postgresql://aegis:aegis_secret@localhost:5432/aegisai
# POSTGRES_USER=aegis
# POSTGRES_PASSWORD=aegis_secret
# POSTGRES_DB=aegisai

# ===========================================
# Redis (Caching & Sessions)
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# API Security
# ===========================================
AEGIS_API_KEY=your-secret-api-key-here
AEGIS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
AEGIS_RATE_LIMIT=60
AEGIS_RATE_LIMIT_WINDOW=60

# ===========================================
# Debug Mode (set to false in production)
# ===========================================
AEGIS_DEBUG=true

# ===========================================
# API Server
# ===========================================
AEGIS_API_HOST=0.0.0.0
AEGIS_API_PORT=8080

# ===========================================
# Frontend
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:8080

# ===========================================
# Google Gemini AI (LLM for NLQ)
# ===========================================
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_MAX_TOKENS=2048
GEMINI_TEMPERATURE=0.7

# ===========================================
# Semantic Layer (Grounding DINO)
# ===========================================
SEMANTIC_ENABLED=false
SEMANTIC_BOX_THRESHOLD=0.35
SEMANTIC_TEXT_THRESHOLD=0.25
SEMANTIC_RISK_TRIGGER_THRESHOLD=0.6
SEMANTIC_CACHE_TTL=60
SEMANTIC_MAX_CONCURRENT=2
# Leave empty for auto (GPU-first, CPU fallback)
SEMANTIC_DEVICE=
